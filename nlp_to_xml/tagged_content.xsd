<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
xmlns="http://archives.ncdcr.gov/mail-account/tagged-content/" elementFormDefault="qualified">

    <xs:element name="tokens">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="token" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="token">
        <xs:complexType>

			<xs:attribute name="NER">
                <xs:simpleType>
                    <xs:restriction base="xs:boolean">
                    </xs:restriction>
                </xs:simpleType>
			</xs:attribute>
			
			<xs:attribute name="NER.tag">
                <xs:simpleType>
                    <xs:restriction base="xs:token">
					</xs:restriction>
                </xs:simpleType>
			</xs:attribute>

            <xs:attribute name="NER.tag.authority">
                <xs:simpleType>
                    <xs:restriction base="xs:token">
                        <xs:enumeration value="stanford.edu"></xs:enumeration>
                        <xs:enumeration value="ncdcr.gov"></xs:enumeration>
                    </xs:restriction>
                </xs:simpleType>
            </xs:attribute>

			<xs:attribute name="append" use="required">
                <xs:simpleType>
                    <xs:restriction base="xs:string">
					</xs:restriction>
                </xs:simpleType>
			</xs:attribute>

        </xs:complexType>
    </xs:element>

</xs:schema>
